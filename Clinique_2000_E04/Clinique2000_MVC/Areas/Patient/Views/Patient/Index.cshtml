@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container-fluid">
    <div class="row justify-content-around text-center">
        <div class="col col-lg-10 col-xl-9">
            <div>
                <h1 class="h0">Log in</h1>
                <div class="divider-2 mb-3 "></div>

            </div>


            <form asp-controller="#" asp-action="#" method="post" enctype="multipart/form-data" class="text-start p1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label class="form-label mt-3 mb-1">Courriel</label>
                        <input type="text" class="form-control" id="nomPatient" placeholder="Exemple: abc@exemple.com">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label class="form-label mt-3 mb-1">Password</label>
                        <input type="text" class="form-control" placeholder="Exemple: 1234567!">
                    </div>
                </div>

                <!--CreateBTN-->
                <div class="row justify-content-center text-center">
                    <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                        <button type="submit" class="btn-create">
                            <span id="btntextCreate">
                                Login
                            </span>
                        </button>
                        <br />
                        <br />
                        @*                       <button type="submit" class="btn-create">

                        <span id="btntextCreate">
                        Login with Google
                        </span>
                        <i class="fa-brands fa-google-plus-g"></i>
                        </button>*@
                            <a asp-area="Patient" asp-controller="Patient" asp-action="Login" class="btn btn-create form-control" style="width:270px">
                                <span id="btntextCreate ">
                                    Login with Google
                                </span>
                                <i class="fa-brands fa-google-plus-g"></i>
                            </a>


                    </div>
                </div>
                <div class="row justify-content-center text-center">
                    <div class="col col-md-8 col-xl-6 my-2">
                        <button type="reset" class="btn-reinitialiser">
                            <span id="btntextReset">
                                Réinitialiser
                            </span>
                            <i class="fa-solid fa-arrow-rotate-left"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

