@model Clinique

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Clinique</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CliniqueID" />
            <div class="form-group">
                <label asp-for="NomClinique" class="control-label"></label>
                <input asp-for="NomClinique" class="form-control" />
                <span asp-validation-for="NomClinique" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courriel" class="control-label"></label>
                <input asp-for="Courriel" class="form-control" />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureOuverture" class="control-label"></label>
                <input asp-for="HeureOuverture" class="form-control" />
                <span asp-validation-for="HeureOuverture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureFermeture" class="control-label"></label>
                <input asp-for="HeureFermeture" class="form-control" />
                <span asp-validation-for="HeureFermeture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempsMoyenConsultation" class="control-label"></label>
                <input asp-for="TempsMoyenConsultation" class="form-control" />
                <span asp-validation-for="TempsMoyenConsultation" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstActive" /> @Html.DisplayNameFor(model => model.EstActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AdresseID" class="control-label"></label>
                <select asp-for="AdresseID" class="form-control" asp-items="ViewBag.AdresseID"></select>
                <span asp-validation-for="AdresseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

