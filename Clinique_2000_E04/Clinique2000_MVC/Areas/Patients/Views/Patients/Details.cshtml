@model Patient

@{
    ViewData["Title"] = "Details";
}

<div class="container" style="max-width: 1080px; margin-top: 50px;">
    <h1 class="text-center">Details</h1>

    <div>
        <h4>Patient : @Model.Nom, @Model.Prenom</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Prenom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Prenom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NAM)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NAM)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CodePostal)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CodePostal)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DateDeNaissance)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateDeNaissance)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </dl>
    </div>
    <div style="margin-bottom:40px">
        <a asp-action="Edit" asp-route-id="@Model?.PatientId" class="btn btn-create form-control" style="width:auto">Edit</a> |
        <a asp-action="Index" class="btn-reinitialiser">Retour à la liste</a>
    </div>
</div>