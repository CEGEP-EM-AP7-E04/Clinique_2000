        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NAM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NAM)
        </dd>
        <dt class="col-sm-2">
